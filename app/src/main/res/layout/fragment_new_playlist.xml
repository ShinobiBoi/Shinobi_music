<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:background="@color/grey"
tools:context=".ui.fragments.NewPlaylistFragment">

<Button
    android:id="@+id/button3"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:backgroundTint="@color/grey"
    android:text="done"
    android:textColor="@color/red"
    app:layout_constraintBaseline_toBaselineOf="@+id/textView"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintHorizontal_bias="0.5"
    app:layout_constraintStart_toEndOf="@+id/textView"
    app:layout_constraintTop_toTopOf="parent" />

<TextView
    android:id="@+id/textView"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="24dp"
    android:text="New Playlist"
    android:textColor="@color/white"
    android:textSize="16sp"
    android:textStyle="bold"
    app:layout_constraintEnd_toStartOf="@+id/button3"
    app:layout_constraintHorizontal_bias="0.5"
    app:layout_constraintStart_toEndOf="@+id/button2"
    app:layout_constraintTop_toTopOf="parent" />

<Button
    android:id="@+id/button2"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:backgroundTint="@color/grey"
    android:text="cancel"
    android:textColor="@color/red"
    app:layout_constraintBaseline_toBaselineOf="@+id/textView"
    app:layout_constraintEnd_toStartOf="@+id/textView"
    app:layout_constraintHorizontal_bias="0.5"
    app:layout_constraintHorizontal_chainStyle="spread"
    app:layout_constraintStart_toStartOf="parent" />

<ImageView
    android:id="@+id/rectangle_image"
    android:layout_width="299dp"
    android:layout_height="294dp"
    android:src="@drawable/rectangle"
    android:layout_marginTop="126dp"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent"/>

<ImageView
    android:layout_width="100dp"
    android:layout_height="100dp"
    android:src="@drawable/rectanglepartone"
    android:layout_marginTop="76dp"
    android:layout_marginStart="47dp"
    app:layout_constraintTop_toTopOf="@id/rectangle_image"
    app:layout_constraintStart_toStartOf="@id/rectangle_image"
    />

<ImageView
    android:layout_width="100dp"
    android:layout_height="141dp"
    android:src="@drawable/rectangleparttwo"
    android:layout_marginTop="76dp"
    android:layout_marginStart="110dp"
    app:layout_constraintTop_toTopOf="@id/rectangle_image"
    app:layout_constraintStart_toStartOf="@id/rectangle_image"
    />

<EditText
    android:id="@+id/new_playlistname_editText"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:textSize="16sp"
    android:hint="PlayList Name"
    android:textColor="@color/lightgrey"
    android:textColorHint="@color/lightgrey"
    android:layout_marginTop="53dp"
    app:layout_constraintTop_toBottomOf="@id/rectangle_image"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent"/>

<View
    android:layout_width="wrap_content"
    android:layout_height="1dp"
    android:background="@color/lightgrey"
    android:layout_marginTop="54.5dp"
    android:layout_marginStart="38dp"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@id/new_playlistname_editText" />

<EditText
    android:id="@+id/new_playlistdesc_editText"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:textSize="14sp"
    android:hint="Description"
    android:textColor="@color/lightgrey"
    android:textColorHint="@color/lightgrey"
    android:layout_marginTop="155dp"
    android:layout_marginStart="44dp"
    app:layout_constraintTop_toBottomOf="@id/rectangle_image"
    app:layout_constraintStart_toStartOf="parent"/>

<View
    android:layout_width="wrap_content"
    android:layout_height="1dp"
    android:background="@color/lightgrey"
    android:layout_marginTop="127dp"
    android:layout_marginStart="42dp"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@id/new_playlistname_editText" />

<ImageButton
    android:id="@+id/addbtn"
    android:layout_width="19.2dp"
    android:layout_height="19.2dp"
    android:src="@drawable/addmusic"
    android:background="@color/grey"
    android:layout_marginStart="44dp"
    android:layout_marginTop="53dp"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@id/new_playlistdesc_editText"/>

<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Add Music"
    android:textSize="14sp"
    android:textColor="@color/red"
    android:layout_marginStart="12dp"
    app:layout_constraintStart_toEndOf="@id/addbtn"
    app:layout_constraintTop_toTopOf="@id/addbtn"
    app:layout_constraintBottom_toBottomOf="@id/addbtn"/>

</androidx.constraintlayout.widget.ConstraintLayout>


